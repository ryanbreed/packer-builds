{
  "builders": [
    {
      "type":"vmware-vmx",
      "source_path": "builds/vmware-vmx-base-centos/breed-base-centos.vmx",
      "headless": "{{ user `headless` }}",
      "http_directory": "http",
      "output_directory": "builds/packer-{{user `template`}}-{{build_type}}",
      "ssh_username": "vagrant",
      "ssh_password": "vagrant",
      "ssh_wait_timeout": "100s",
      "shutdown_command": "echo 'vagrant'|sudo -S /sbin/halt -h -p",
      "vm_name": "{{user `box_basename`}}-{{ user `template` }}"
    }
  ],
  "provisioners": [
    {
      "type":"shell",
      "execute_command": "echo 'vagrant' | {{.Vars}} sudo -S -E sh -eux '{{.Path}}'",
      "inline": [ 
        "rpm --import https://www.elrepo.org/RPM-GPG-KEY-elrepo.org",
        "rpm -Uvh http://www.elrepo.org/elrepo-release-7.0-2.el7.elrepo.noarch.rpm",
        "yum -y remove kernel-headers*",
        "yum -y --enablerepo=elrepo-kernel install kernel-lt kernel-lt-headers kernel-lt-devel kernel-lt-tools kernel-lt-tools-libs-devel perf python-perf"

      ]
    }
  ],
  "post-processors": [
    {
      "type": "vagrant",
      "output": "/data/export/boxes/packer_{{.Provider}}-{{user `box_basename`}}-{{user `template`}}.box",
      "vagrantfile_template":"vagrantfile_templates/centos-7.3.rb",
      "keep_input_artifact": true
    }
  ],

  "variables": {
    "build_timestamp": "{{isotime \"20060102150405\"}}",
    "box_basename": "lk",
    "template": "44",
    "cpus": "2",
    "disk_size": "10240",
    "headless": "true",
    "memory": "1024",
    "metadata": "floppy/dummy_metadata.json",
    "no_proxy": "{{env `no_proxy`}}",
    "version": "0.2.0"
  }
}
