{
  "builders": [
    {
      "type":"vmware-vmx",
      "source_path": "builds/vmware-vmx-base-centos/breed-base-centos.vmx",
      "headless": "{{ user `headless` }}",
      "http_directory": "http",
      "output_directory": "builds/packer-{{user `template`}}-{{build_type}}",
      "ssh_username": "vagrant",
      "ssh_password": "vagrant",
      "ssh_wait_timeout": "100s",
      "shutdown_command": "echo 'vagrant'|sudo -S /sbin/halt -h -p",
      "vm_name": "{{user `box_basename`}}-{{ user `template` }}"
    },
    {
      "type": "qemu",
      "disk_image": true,
      "boot_wait": "10s",
      "disk_size": "{{user `disk_size`}}",
      "headless": "{{ user `headless` }}",
      "http_directory": "http",
      "iso_url": "http://ninja/export/images/breed-base-centos",
      "iso_checksum_type": "md5",
      "iso_checksum_url": "http://ninja/export/images/breed-base-centos.md5",
      "output_directory": "builds/packer-{{user `template`}}-qemu",
      "shutdown_command": "echo 'vagrant'|sudo -S /sbin/halt -h -p",
      "ssh_port": 22,
      "ssh_username": "vagrant",
      "ssh_password": "vagrant",
      "ssh_wait_timeout": "100s",
      "vm_name": "{{user `box_basename`}}-{{ user `template` }}"
    }
  ],
  "provisioners": [
    {
      "type":"shell",
      "execute_command": "echo 'vagrant' | {{.Vars}} sudo -S -E sh -eux '{{.Path}}'",
      "inline": [ "nmcli g hostname packer-stubby-python" ]
    },
    {
      "type": "ansible",
      "playbook_file":"ansible/pb_python.yml"
    }
  ],
  "post-processors": [
    {
      "type": "vagrant",
      "output": "/data/export/boxes/packer_{{.Provider}}-{{user `box_basename`}}-{{user `template`}}.box",
      "vagrantfile_template":"vagrantfile_templates/centos-7.3.rb",
      "keep_input_artifact": true
    },
    {
      "type":"shell-local",
      "inline": [
        "cp -vf builds/packer-python-qemu/stubby-python /data/export/images",
        "openssl md5 < /data/export/images/stubby-python | awk '{print $2,\"stubby-python\"}' > /data/export/images/stubby-python.md5",
        "openssl md5 < /data/export/boxes/packer_libvirt-stubby-python.box | awk '{print $2,\"packer_libvirt-stubby-python.box\"}' > /data/export/boxes/packer_libvirt-stubby-python.box.md5"
      ]
    },
    {
      "only":["vmware-vmx"],
      "type":"shell-local",
      "inline": [
        "openssl md5 < /data/export/boxes/packer_vmware-stubby-python.box | awk '{print $2,\"packer_vmware-stubby-python.box\"}' > /data/export/boxes/packer_vmware-stubby-python.box.md5"
      ]
    }

  ],
  "variables": {
    "build_timestamp": "{{isotime \"20060102150405\"}}",
    "box_basename": "stubby",
    "template": "python",
    "cpus": "2",
    "disk_size": "10240",
    "headless": "true",
    "memory": "1024",
    "metadata": "floppy/dummy_metadata.json",
    "no_proxy": "{{env `no_proxy`}}",
    "version": "0.1.0"
  }
}
